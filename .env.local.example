# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Security
CSRF_SECRET=your-csrf-secret-here-min-32-chars-long
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# Database (für zukünftige Nutzung)
DATABASE_URL=postgresql://user:password@localhost:5432/voai

# AI Service Configuration (für zukünftige Integration)
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.ai-service.com

# Email Service (für Benachrichtigungen)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@voai.ai
EMAIL_PASSWORD=your-email-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Environment
NODE_ENV=development