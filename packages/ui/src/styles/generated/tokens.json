{
  "color": {
    "cosmic": {
      "bg": "#ffffff",
      "bg-dark": "#0f0f0f",
      "surface": "#f6f6f7",
      "surface-dark": "#1a1a1a",
      "border": "#e5e7eb",
      "border-dark": "#2d2d2d",
      "text-primary": "#0e0e11",
      "text-primary-dark": "#ffffff",
      "text-secondary": "#6b7280",
      "text-secondary-dark": "#9ca3af",
      "accent": "#4f46e5",
      "accent-dark": "#6366f1"
    },
    "status": {
      "success": "#22c55e",
      "success-dark": "#16a34a",
      "warning": "#facc15",
      "warning-dark": "#ca8a04",
      "error": "#ef4444",
      "error-dark": "#dc2626"
    },
    "info": "#3b82f6",
    "info-dark": "#2563eb",
    "neutral": "#64748b",
    "neutral-dark": "#94a3b8",
    "highlight": "#a855f7",
    "highlight-dark": "#9333ea"
  },
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        }
      ]
    },
    "json": {
      "transformGroup": "js",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.json",
          "format": "json/nested"
        }
      ]
    }
  },
  "elevation": {
    "0": "none",
    "1": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "2": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
    "3": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)",
    "4": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)",
    "5": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "glow": "0 0 20px rgba(79, 70, 229, 0.1)",
    "glow-lg": "0 0 40px rgba(79, 70, 229, 0.15)"
  },
  "blur": {
    "sm": "4px",
    "md": "8px",
    "lg": "16px"
  },
  "duration": {
    "instant": "50ms",
    "fast": "150ms",
    "standard": "300ms",
    "slow": "500ms",
    "glacial": "1000ms"
  },
  "easing": {
    "linear": "linear",
    "ease-in": "cubic-bezier(0.4, 0, 1, 1)",
    "ease-out": "cubic-bezier(0, 0, 0.2, 1)",
    "ease-in-out": "cubic-bezier(0.4, 0, 0.2, 1)",
    "cosmic": "cubic-bezier(0.34, 1.56, 0.64, 1)"
  },
  "spacing": {
    "0": "0",
    "1": "0.5rem",
    "2": "1rem",
    "3": "1.5rem",
    "4": "2rem",
    "5": "3rem",
    "6": "4rem"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "16px"
  },
  "font": {
    "family": {
      "sans": "'Inter Variable', Inter, system-ui, -apple-system, sans-serif",
      "mono": "'JetBrains Mono', 'Courier New', monospace"
    },
    "size": {
      "xs": "0.875rem",
      "sm": "1rem",
      "md": "1.125rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "2.5rem",
      "3xl": "3rem",
      "4xl": "4rem"
    },
    "weight": {
      "regular": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0"
    }
  }
}
