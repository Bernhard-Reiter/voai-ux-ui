{
  "color": {
    "cosmic": {
      "bg": "#ffffff",
      "bg-dark": "#0f0f0f",
      "surface": "#f6f6f7",
      "surface-dark": "#1a1a1a",
      "border": "#e5e7eb",
      "border-dark": "#2d2d2d",
      "text-primary": "#0e0e11",
      "text-primary-dark": "#ffffff",
      "text-secondary": "#6b7280",
      "text-secondary-dark": "#9ca3af",
      "accent": "#4f46e5",
      "accent-dark": "#6366f1"
    },
    "status": {
      "success": "#22c55e",
      "success-dark": "#16a34a",
      "warning": "#facc15",
      "warning-dark": "#ca8a04",
      "error": "#ef4444",
      "error-dark": "#dc2626"
    }
  },
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        }
      ]
    },
    "json": {
      "transformGroup": "js",
      "buildPath": "src/styles/generated/",
      "files": [
        {
          "destination": "tokens.json",
          "format": "json/nested"
        }
      ]
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.5rem",
    "2": "1rem",
    "3": "1.5rem",
    "4": "2rem",
    "5": "3rem",
    "6": "4rem"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "16px"
  },
  "font": {
    "family": {
      "sans": "'Inter Variable', Inter, system-ui, -apple-system, sans-serif",
      "mono": "'JetBrains Mono', 'Courier New', monospace"
    },
    "size": {
      "xs": "0.875rem",
      "sm": "1rem",
      "md": "1.125rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "2.5rem",
      "3xl": "3rem",
      "4xl": "4rem"
    },
    "weight": {
      "regular": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0"
    }
  }
}
