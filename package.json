{
  "name": "voai-enterprise",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:turbo": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky || true",
    "sb:dev": "turbo run storybook --filter=@voai/ui",
    "sb:build": "turbo run build-storybook --filter=@voai/ui",
    "visual:test": "test-storybook --url http://localhost:6006",
    "visual:update": "VISUAL_UPDATE=true pnpm visual:test",
    "visual:test-static": "serve packages/ui/storybook-static -p 6006 -s & sleep 5 && test-storybook --url http://localhost:6006; kill $!"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.32.0",
    "@next/eslint-plugin-next": "^15.4.4",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-interactions": "9.0.0-alpha.10",
    "@storybook/nextjs": "^9.0.18",
    "@storybook/react": "^9.0.18",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chromatic": "^13.1.2",
    "dotenv": "^17.2.0",
    "eslint": "^9.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-image-snapshot": "^6.5.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "serve": "^14.2.4",
    "storybook": "^9.0.18",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.4",
    "zod": "^3.25.76"
  },
  "overrides": {
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "on-headers@<1.1.0": ">=1.1.0"
    }
  }
}
