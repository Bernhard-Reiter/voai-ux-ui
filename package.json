{
  "name": "voai-monorepo",
  "version": "0.0.0",
  "description": "VOAI Design System - A modern UI component library",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:e2e:variant": "pnpm --filter showcase test:e2e:variant",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "storybook": "pnpm --filter storybook-app dev",
    "showcase": "pnpm --filter showcase dev",
    "chromatic": "chromatic --playwright --project-token=chpt_ff83d6d73a36cf9",
    "chromatic:ci": "chromatic --playwright --exit-zero-on-changes",
    "chromatic:usage": "node scripts/chromatic-usage.js",
    "chromatic:dry-run": "chromatic --playwright --project-token=chpt_ff83d6d73a36cf9 --dry-run"
  },
  "keywords": [
    "design-system",
    "ui-components",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "voai Team",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.12.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.40.0",
    "chromatic": "^13.1.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6"
  },
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  }
}
