{
  "name": "voai-enterprise",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:tokens": "pnpm --filter @external/voai-ui-tokens build",
    "test": "jest",
    "test:turbo": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky",
    "sb:dev": "turbo run storybook --filter=@voai/ui",
    "sb:build": "turbo run build-storybook --filter=@voai/ui",
    "visual:test": "test-storybook",
    "visual:update": "VISUAL_UPDATE=true pnpm visual:test"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-essentials": "^9.0.0-alpha.10",
    "@storybook/addon-interactions": "^9.0.0-alpha.10",
    "@storybook/nextjs": "^9.0.18",
    "@storybook/react": "^9.0.18",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "chromatic": "^13.1.2",
    "dotenv": "^17.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-image-snapshot": "^6.5.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.2.4",
    "storybook": "^9.0.18",
    "ts-jest": "^29.4.0",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.42"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0"
  }
}
