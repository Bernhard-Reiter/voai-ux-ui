{
  "name": "@voai/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "worker"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "type-check": "turbo type-check",
    "setup": "chmod +x ./scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "deploy": "chmod +x ./scripts/deploy-production.sh && ./scripts/deploy-production.sh",
    "claude-flow": "chmod +x ./scripts/setup-claude-flow.sh && ./scripts/setup-claude-flow.sh",
    "worker": "pnpm --filter @voai/worker start",
    "worker:dev": "pnpm --filter @voai/worker dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.20",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "prom-client": "^15.1.0"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0"
  }
}