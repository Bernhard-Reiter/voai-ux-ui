{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@voai/ui": ["../../packages/ui/src"],
      "@voai/ui/*": ["../../packages/ui/src/*"],
      "@voai/config": ["../../packages/config"],
      "@voai/config/*": ["../../packages/config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
