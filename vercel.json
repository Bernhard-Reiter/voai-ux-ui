{
  "buildCommand": "./build.sh",
  "outputDirectory": "apps/frontend/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet .",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
