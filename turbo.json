{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "TEST_VARIANT"]
    },
    "test:e2e:variant": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "env": ["NODE_ENV", "TEST_VARIANT"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}