# ===========================================
# VOAI Platform Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values
# Different apps may use different subsets of these variables

# -------------------------------------------
# Base Configuration (All Apps)
# -------------------------------------------

# App Environment
NODE_ENV=development

# Supabase (Required for all apps)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# n8n Workflow Integration (Required for all apps)
N8N_API_URL=https://n8n.voai.com
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_URL=https://n8n.voai.com/webhook

# Feature Flags (All Apps)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true

# -------------------------------------------
# Frontend App Configuration
# -------------------------------------------

# Frontend URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Sentry (Frontend)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=voai
SENTRY_PROJECT=frontend

# Analytics (Frontend)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Frontend Feature Flags
NEXT_PUBLIC_ENABLE_VECTOR_SEARCH=false

# Vercel (auto-populated in deployment)
VERCEL_URL=
VERCEL_ENV=

# -------------------------------------------
# CRM App Configuration
# -------------------------------------------

# CRM URLs
NEXT_PUBLIC_CRM_URL=http://localhost:3001

# CRM API
CRM_API_URL=https://api.voai.com/crm
CRM_API_KEY=your-crm-api-key

# Payment Integration
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -------------------------------------------
# Workflow App Configuration
# -------------------------------------------

# Workflow Settings
WORKFLOW_EXECUTION_TIMEOUT=300000  # 5 minutes in ms
WORKFLOW_MAX_RETRIES=3

# Queue Configuration
REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=10